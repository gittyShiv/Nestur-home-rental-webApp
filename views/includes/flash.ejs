<% if(success && success.length){ %>
<div class="alert alert-success d-flex align-items-center alert-dismissible fade show col-6 offset-3" role="alert">
    <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Success:" width="16" height="16"><use xlink:href="#check-circle-fill"/></svg>
    <div>
        <%= success %> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show col-6 offset-3" role="alert">
        <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:" width="16" height="16"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
            <%= error %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <% } %>